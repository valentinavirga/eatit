{% extends 'base.html.twig' %}
 
 {% block body %}
     <h1>Recipes list</h1>
 
     <table>
         <thead>
             <tr>
                 <th>Title</th>
                 <th>Category</th>
                 <th>Rate</th>
                 <th>Actions</th>
             </tr>
         </thead>
         <tbody>
             {% for recipe in recipes %}
                 <tr>
                     <td><a href="{{ path('recipe_show', { 'id': recipe.id }) }}">{{ recipe.title }}</a></td>
                     <td>{{ recipe.category.name }}</td>
                     <td>{{ recipe.rate }}</td>
                     <td>
                             <a href="{{ path('recipe_show', { 'id': recipe.id }) }}">Visualizza</a>
 
                             <a href="{{ path('recipe_edit', { 'id': recipe.id }) }}">Edita</a>
                     </td>
                 </tr>
             {% endfor %}
         </tbody>
     </table>
 
     <a href="{{ path('recipe_new') }}"> Nuova Ricetta</a>
 {% endblock %}